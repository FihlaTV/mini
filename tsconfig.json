{
	"compileOnSave": false,

	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		"moduleResolution": "node",
		"lib": ["es5", "es6", "dom", "webworker"],
		"declaration": false,
		"declarationMap": false,
		"sourceMap": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"importHelpers": false,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./deploy"
	},

	"include": [
		"./src/static/typings/Ammo.d.ts",
		"./src/static/ts/**/*.ts"
	]
}
