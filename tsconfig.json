{
	"compileOnSave": false,

	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"lib": ["es2017", "dom", "webworker"],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true
	},

	"exclude": [
		"node_modules/*"
	]
}
